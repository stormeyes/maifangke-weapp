<van-row>
    <van-search value="{{ q }}" placeholder="请输入小区名称" bind:search="onFetchHouse" bind:change="onUpdateQ"/>
</van-row>
<van-tabs active="{{ tabActive }}" bind:change="onChange">
    <van-tab title="区域">
        <van-tree-select items="{{ locations }}" main-active-index="{{ locationMainActiveIndex }}" active-id="{{ locationActiveIds }}" bind:click-nav="onClickNav" bind:click-item="onClickItem" main-item-class="no-bold" content-item-class="no-bold" />
        <van-row>
            <van-col offset="12" span="12">
                <van-button type="danger" plain="{{ plain }}" size="small" custom-class="nav-btn" bind:click="onFetchHouse">确定</van-button>
                <van-button type="default" plain="{{ plain }}" size="small" custom-class="nav-btn" bind:click="onClearLocation">重置</van-button>
            </van-col>
        </van-row>
    </van-tab>
    <van-tab title="价格" custom-class="tab-content">
        <van-row>
            <van-col span="6">
                <van-button type="primary" plain="{{ plain }}" bind:click="onBtnClick" size="small" custom-class="btn">200万以下</van-button>
            </van-col>
            <van-col span="6">
                <van-button type="primary" plain="{{ plain }}" bind:click="onBtnClick" size="small" custom-class="btn">200-300万</van-button>
            </van-col>
            <van-col span="6">
                <van-button type="primary" plain="{{ plain }}" bind:click="onBtnClick" size="small" custom-class="btn">300-400万</van-button>
            </van-col>
            <van-col span="6">
                <van-button type="primary" plain="{{ plain }}" bind:click="onBtnClick" size="small" custom-class="btn">400-500万</van-button>
            </van-col>
        </van-row>
        <van-row>
            <van-col span="6">
                <van-button type="primary" plain="{{ plain }}" bind:click="onBtnClick" size="small" custom-class="btn">500-800万</van-button>
            </van-col>
            <van-col span="6">
                <van-button type="primary" plain="{{ plain }}" bind:click="onBtnClick" size="small" custom-class="btn">800-1000万</van-button>
            </van-col>
            <van-col span="6">
                <van-button type="primary" plain="{{ plain }}" bind:click="onBtnClick" size="small" custom-class="btn">1000-2000万</van-button>
            </van-col>
            <van-col span="6">
                <van-button type="primary" plain="{{ plain }}" bind:click="onBtnClick" size="small" custom-class="btn">2000万以上</van-button>
            </van-col>
        </van-row>
        <van-row>
            <van-col offset="12" span="12">
                <van-button type="danger" plain="{{ plain }}" size="small" custom-class="nav-btn" bind:click="onSelectLocation">确定</van-button>
                <van-button type="default" plain="{{ plain }}" size="small" custom-class="nav-btn" bind:click="onClearLocation">重置</van-button>
            </van-col>
        </van-row>
    </van-tab>
    <van-tab title="房型">
        <van-checkbox-group bind:change="onUpdateSelectedRooms" value="{{ selectedRooms }}">
            <van-cell-group>
                <van-cell wx:for="{{ rooms }}" wx:key="index" title="{{ item.name }}" clickable data-index="{{ index }}" bind:click="toggle" value-class="value-class">
                    <van-checkbox catch:tap="noop" name="{{ item.value }}" shape="square" class="checkboxes-{{ index }}" />
                </van-cell>
            </van-cell-group>
        </van-checkbox-group>
        <van-row>
            <van-col offset="12" span="12">
                <van-button type="danger" plain="{{ plain }}" size="small" custom-class="nav-btn" bind:click="onFetchHouse">确定</van-button>
                <van-button type="default" plain="{{ plain }}" size="small" custom-class="nav-btn" bind:click="onClearRooms">重置</van-button>
            </van-col>
        </van-row>
    </van-tab>
    <van-tab title="更多">更多</van-tab>
</van-tabs>
<van-row>
    <van-panel wx:for="{{ houses }}" wx:key="index" title="{{ item.name }} {{ item.roomType }} {{ item.area }}㎡" status="{{ item.price }}万" desc="{{ item.location }}">
        <view class="house_detail" wx:if="{{item.schools}}">
            <van-tag type="warning">学位</van-tag> {{ item.schools }}
        </view>
        <view class="house_detail">
            电梯 | 低楼层 | {{ item.orientation }} | {{ item.houseType }} | {{ item.registerTime }}{{ item.isUnique }}
        </view>
        <view class="house_detail">
            月供{{ item.monthlyMortgage }}万 | 房租0.7万 | {{ item.loanInfo }}
        </view>
        <van-divider />
    </van-panel>
</van-row>
<van-toast id="custom-selector" />